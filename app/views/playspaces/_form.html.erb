<div class="row">
  <div class="col-xs-12 col-sm-10 col-md-8">

    <%= bootstrap_form_for(@playspace) do |f| %>
      <div>
        <%= f.text_field :name %>
      </div>
      <div>
        <%= f.collection_select(:category_id, Category.all, :id, :name, :prompt => 'Select') %>
      </div>
      <div>
        <%= f.select(:region, ["", "HK", "Kln", "NT"]) %>
      </div>
      <div>
        <%= f.select(:district, []) %>
      </div>
      <div>
        <%= f.text_field :address %>
      </div>
      <div>
        <%= f.check_box :bike_path %>
      </div>
      <div>
        <%= f.check_box :merry_go_round, label: "Merry-go-round" %>
      </div>
      <div>
        <%= f.check_box :play_structure %>
      </div>
      <div>
        <%= f.check_box :seesaw %>
      </div>
      <div>
        <%= f.check_box :slide %>
      </div>
      <div>
        <%= f.check_box :swing %>
      </div>
      <div>
        <%= f.check_box :carpark %>
      </div>
      <div>
        <%= f.check_box :snack_shop %>
      </div>
      <div>
        <%= f.check_box :wc, label: "Toilet" %>
      </div>
      <div>
        <%= f.submit %>
      </div>

    <% end %>
  </div>
</div>
