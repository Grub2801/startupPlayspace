<!-- Sidebar right -->
<div id="sidebar-wrapper-right" class="hide">
  <ul class="sidebar-nav">
    <li class="sidebar-brand">PlaySpace</li>

    <div class="container col-xs-12">
      <%= form_for :playspace, {url: "/playspaces", method: "get", html:{id: "search"}} do |f| %>
        <div>
          <br>
          <label>Search by name:</label>
          <%= f.text_field :name %>
        </div>
        <br>
        <div>
          <%= f.select :region, ['HK','Kln','NT'], :prompt => 'Select by region:' %>
        </div>
        <br>
        <div>
          <%= f.select :district, [], :prompt => 'Select by district:'%>
        </div>
        <br>
        <div>
          <%= f.collection_select :category_id, Category.all, :id, :name, :prompt => 'Select by category:' %>
        </div>
        <br>
        <div>
          <label>Search by feature:</label>
          <div>
            <label>bike path</label>
            <%= f.check_box :bike_path, {}, true, false %>
          <div>
            <label>merry-go-round</label>
            <%= f.check_box :merry_go_round, {}, true, false  %>
          </div>
          <div>
            <label>play structure</label>
            <%= f.check_box :play_structure, {}, true, false  %>
          </div>
          <div>
            <label>seesaw</label>
            <%= f.check_box :seesaw, {}, true, false  %>
          </div>
          <div>
            <label>slide</label>
            <%= f.check_box :slide, {}, true, false  %>
          </div>
          <div>
            <label>swing</label>
            <%= f.check_box :swing, {}, true, false  %>
          </div>
          <div>
            <label>carpark</label>
            <%= f.check_box :carpark, {}, true, false  %>
          </div>
          <div>
            <label>snack shop</label>
            <%= f.check_box :snack_shop, {}, true, false  %>
          </div>
          <div>
            <label>toilet</label>
            <%= f.check_box :wc, {}, true, false  %>
          </div>
          <br>
        </div>
        <%= submit_tag 'Search', class:"btn btn-success btn-block no-margin" %>
      <% end %>
    </div>
  </ul>
</div>
<!-- /#sidebar-wrapper right-->
